<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    tools:context=".auth.StatusActivity">


    <ImageView
        android:id="@+id/illustration"
        android:layout_width="246dp"
        android:layout_height="141dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/status"
        app:layout_constraintBottom_toTopOf="@id/text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/relationships_thrive_on_the_foundation_of_honesty"
        android:textColor="@color/deepGreen"
        android:textSize="19sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/relationship_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:text="relationship"
        app:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:strokeWidth="0dp"
        app:iconSize="0dp"
        app:rippleColor="?attr/colorOnPrimary"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/casual_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:text="casual"
        app:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:strokeWidth="0dp"
        app:iconSize="0dp"
        app:rippleColor="?attr/colorOnPrimary"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/relationship_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/not_sure_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:text="not sure yet"
        app:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:strokeWidth="0dp"
        app:iconSize="0dp"
        app:rippleColor="?attr/colorOnPrimary"
        app:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/casual_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="124dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@color/green"
        app:cornerRadius="12dp"
        app:elevation="4dp"
        app:iconSize="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/not_sure_button"
        app:rippleColor="?attr/colorOnPrimary"
        app:strokeWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
